<Window x:Class="ThGameMgr.Ex.FileManager.NewFileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThGameMgr.Ex.FileManager"
        mc:Ignorable="d"
        Title="新規ファイルの追加" Height="154" Width="319" ResizeMode="NoResize" ShowInTaskbar="False" 
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="ファイル名(_N):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="NewFileNameBox" Margin="10,41,10,0" TextWrapping="NoWrap"
                Text="" VerticalAlignment="Top" MaxLines="1"/>
        <Button x:Name="AddButton" Content="追加(_A)" Margin="0,0,10,10" Height="24" 
                IsDefault="True"
                VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="90" Click="AddButtonClick"/>

    </Grid>
</Window>
